<article id="{{page.handle}}" class="page">
	<header>
		<h1>{{ page.title }}</h1>
		<p>Posted by <span rel="author">{{page.author}}</span> on <time datetime="{{ page.published_at | date: "%Y-%m-%dT%H:%M:%S%Z" }}" pubdate>{{ page.published_at | date: "%A, %B %d" }}</time></p>
	</header>
	<section>
		<h1 hidden>Article content</h1>
		{{ page.content }}
	</section>
</article>