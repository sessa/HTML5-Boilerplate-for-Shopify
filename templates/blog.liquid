<section>
	{% paginate blog.articles by 5 %}
		<h1>{{blog.title}}</h1>
		<dl>
			{% for article in blog.articles %}
				<dt>
					<a href="{{article.url}}">{{ article.title }} {{ article.created_at | date: "%x"}}</a>		
				</dt>
				<dd>
					<p>Published <time datetime="{{ article.published_at | date: "%Y-%m-%dT%H:%M:%S%Z" }}" pubdate>{{ article.published_at | date: "%A, %B %d" }}</time></p>
					<p>{{ article.content | strip_html | truncate: 200 }}<a href="{{article.url}}">more</a></p>
				</dd>
			{% endfor %}
		<dl>
		<div id="pagination">
			{{ paginate | default_pagination }}
		</div>
	{% endpaginate %}
</section>