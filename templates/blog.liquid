{% paginate blog.articles by 5 %}
	<h1>{{blog.title}}</h1>
	<ul class="blog_list">
		{% for article in blog.articles %}
			<li>
				<h2 class="blog_title_link"><a href="{{article.url}}">{{ article.title }} &nbsp; &nbsp; {{ article.created_at | date: "%x"}}</a></h2>	
				{{ article.content | strip_html | truncate: 350 }}<a href="{{article.url}}">more</a>
			</li>
		{% endfor %}
	</ul>
	<div id="pagination">
		{{ paginate | default_pagination }}
	</div>
{% endpaginate %}